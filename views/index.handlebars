<section class="content">

    <h1 class="pageHead">Eat Da Burger!!</h1>

    {{!-- ///////ADDING/////// --}}
    
        <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
        </div>
        <button type="submit">Add Burger</button>
    </form>

    {{!-- ///////ORDER/////// --}}

    <div class="burgerListsSectionOrder">

        <ul class="burgerListOrder">
            {{#each burgers}}
            {{#unless devoured}}
            <div class="burgerItemNumber">
                <span>Order #{{id}}</span>
            </div>

            <div class="burgerItemDevour">
                <span>{{burger_name}}</span>
            </div>
            <button class="devourButton" value = {{id}}>
                Devour!
            </button>
            <br>
            {{/unless}}
            {{/each}}
        </ul>

    </div>

    <div class="burgerListsSectionFinish">

    {{!-- ///////FINISHED/////// --}}

        <ul class="burgerList">
            {{#each burgers}}
            {{#if devoured}}
            <div class="burgerItemFinish">
                <span>{{burger_name}}</span>
            </div>
            <br>
            {{/if}}
            {{/each}}
        </ul>
    </div>


</section>